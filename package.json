{
  "name": "jenga-ui",
  "private": true,
  "scripts": {
    "start": "yarn storybook",
    "dev": "vite",
    "build": "yarn workspaces foreach run build",
    "build:types": "yarn workspaces foreach run build:types",
    "test": "jest",
    "test-cover": "jest --coverage",
    "test-watch": "jest --watch",
    "test-storybook": "test-storybook",
    "serve": "vite preview",
    "storybook": "STORYBOOK_MODE=stories start-storybook -p 6006",
    "build-storybook": "STORYBOOK_MODE=stories build-storybook",
    "build-docs": "STORYBOOK_MODE=docs build-storybook --docs -o storybook-docs",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "postinstall": "husky install",
    "publish:all": "lerna publish --no-verify-access",
    "publish:beta": "lerna publish --ignore-prepublish --ignore-scripts --canary --preid beta --dist-tag beta",
    "publish:dev": "run-s build:dev publish:beta"
  },
  "dependencies": {
    "@types/react-is": "^17.0.3",
    "@types/react-transition-group": "^4.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-transition-group": "^4.4.2",
    "styled-components": "^5.3.5",
    "swc-loader": "^0.2.3",
    "tastycss": "^0.7.7"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.3",
    "@storybook/addon-docs": "^6.5.3",
    "@storybook/addon-essentials": "^6.5.3",
    "@storybook/addon-interactions": "^6.5.3",
    "@storybook/addon-links": "^6.5.3",
    "@storybook/builder-vite": "^0.1.38",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^6.5.3",
    "@storybook/test-runner": "^0.1.0",
    "@storybook/testing-library": "^0.0.11",
    "@swc/core": "^1.2.148",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vitejs/plugin-react": "^1.3.2",
    "bytes": "^3.1.2",
    "chromatic": "^6.7.0",
    "dedent": "^0.7.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.12",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-styled-components": "^7.0.8",
    "lerna": "^5.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.5.4",
    "vite": "^3.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "es5-ext": "0.10.53",
    "prettier": "2.5.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari major versions"
  ],
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*": "prettier --write"
  }
}
