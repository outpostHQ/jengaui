{
  "name": "@jenga-ui/button",
  "version": "0.1.1",
  "license": "MIT",
  "description": "Jenga-UI React button component",
  "keywords": [
    "button",
    "react",
    "jenga-ui",
    "ui",
    "clickable",
    "tabbable"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@jenga-ui/tsconfig": "*",
    "@react-types/button": "^3.6.1",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "tsup": "^6.2.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@jenga-ui/form": "*",
    "@jenga-ui/providers": "*",
    "@jenga-ui/utils": "*",
    "@react-aria/button": "^3.6.1",
    "@react-aria/interactions": "^3.11.0",
    "@react-spectrum/utils": "^3.7.3",
    "@react-types/shared": "^3.14.1",
    "styled-components": "^5.3.5",
    "tastycss": "^0.8.1"
  },
  "homepage": "https://github.com/OutpostHQ/jenga-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OutpostHQ/jenga-ui.git"
  },
  "bugs": {
    "url": "https://github.com/OutpostHQ/jenga-ui/issues"
  }
}
